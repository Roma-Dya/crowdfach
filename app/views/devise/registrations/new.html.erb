<div class="row fix">
  <div class="col s12 m8 offset-m2 l6 offset-l3">
    <div class="card">
      <div class="card-content">
        <h3 class="center-align"><%= t('.new') %></h3>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
          <div class="row">
            <div class="col s12 input-field">
              <%= f.email_field :email, autocomplete: "off", autofocus: true, required: true %>
              <%= f.label :email %>
            </div>

            <div class="col s12 m6 input-field">
              <%= f.text_field :first_name, autocomplete: "off", required: true %>
              <%= f.label :first_name %>
            </div>

            <div class="col s12 m6 input-field">
              <%= f.text_field :last_name, autocomplete: "off", required: true %>
              <%= f.label :last_name %>
            </div>

            <div class="col s12 input-field">
              <%= f.text_field :wallet, autocomplete: "off", required: true %>
              <%= f.label :wallet %>
            </div>

            <div class="col s12 input-field file-field">
              <div class="btn waves-effect waves-light">
                <span><%= t('form.image') %></span>
                <%= f.file_field :avatar %>
                <%= f.hidden_field :avatar_cache %>
              </div>

              <div class="file-path-wrapper input-field fix">
                <input class="file-path" type="text" id="filename">
                <label for="filename"><%= t('.avatar') %></label>
              </div>
            </div>

            <div class="col s12 m6 input-field">
              <%= f.password_field :password, autocomplete: "off", required: true %>
              <%= f.label :password %>
            </div>

            <div class="col s12 m6 input-field">
              <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
              <%= f.label :password_confirmation %>
            </div>

            <div class="col s12">
              <%= recaptcha_tags class: 'recaptcha' %>
            </div>
          </div>

          <div class="row">
            <div class="col s12">
              <%= f.button t('.sign_up'), class: "full-width waves-effect waves-light btn-large", data: {disable_with: I18n.t("form.wait")} %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>