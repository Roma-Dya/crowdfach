<div class="row fix">
  <div class="col s12 m8 offset-m2 l6 offset-l3">
    <div class="card">
      <div class="card-content">
        <h3 class="center-align">Change your password</h3>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>

          <div class="col s12 m6 input-field">
            <%= f.password_field :password, autofocus: true, autocomplete: "off", required: true %>
            <%= f.label :password %>
          </div>

          <div class="col s12 m6 input-field">
            <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
            <%= f.label :password_confirmation %>
          </div>

          <div class="row">
            <div class="col s12">
              <%= f.button "Change my password", class: "full-width waves-effect waves-light btn-large" %>
            </div>
          </div>
        <% end %>

        <div class="row">
          <div class="col s12 center-align">   
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>