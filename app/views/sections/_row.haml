.shadow.screen-width
.parallax-container.screen-width
  .parallax
    = image_tag name
.row.fix.section-header.vend-align
  .col.s12.hide-on-med-and-up
    %h4.shadow-header= t('section.' << name.to_s)
  .col.s8.hide-on-small-and-down
    %h4.shadow-header= t('section.' << name.to_s)
  .col.s4.hide-on-small-and-down
    = link_to t('.more'), section_path(name), class: 'white-text btn-flat waves-effect waves-light right more narrow'
.row.fix.section-row
  - projects.each do |project|
    = render 'cards/card', project: project
  .col.s12.center-align.hide-on-med-and-up.more-small
    = link_to t('.more'), section_path(name), class: 'btn-flat waves-effect'
